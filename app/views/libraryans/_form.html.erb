<style>
    span{
        color : red;
    }
</style>

<%= form_for(@libraryan) do |f| %>
    <div class = "row" style = "text-align: center;">
        <div class = "col-lg-6">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
            <% @libraryan.errors.full_messages_for(:name).each do |message| %>
                <span><%= message %></span><br>
            <% end %>
        </div>

        <div class = "col-lg-6">
            <%= f.label :age %><br>
            <%= f.number_field :age %>
            <% @libraryan.errors.full_messages_for(:address).each do |message| %>
                <span><%= message %></span>
            <% end %>
        </div>

        <div class = "col-lg-6">
            <%= f.label :phone %><br>
            <%= f.number_field :phone %>
            <% @libraryan.errors.full_messages_for(:address).each do |message| %>
                <span><%= message %></span>
            <% end %>
        </div>
        
        <%= f.fields_for :user do |u| %>
            <div class = "col-lg-6">
                <%= u.label :email %><br>
                <%= u.text_field :email %>
               
            </div>

            <div class = "col-lg-6">
                <%= u.label :password %><br>
                <%= u.password_field :password %>
               
            </div>

            <div class = "col-lg-6">
                <%= u.label :password_confirmation %><br>
                <%= u.password_field :password_confirmation %>
               
            </div>
        <% end %>

        <div class = "col-lg-12" style = "margin: 10px 0px; text-align: center;">
            <%= f.submit "Submit", :class => "btn btn-info" %>
        </div>
    </div>
<% end %>