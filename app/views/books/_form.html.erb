<div class="container">
<%= form_for(@book) do |f| %>
    <div class = "row" style = "text-align: center;">
        <div class = "col-lg-6">
            <%= f.label :book_name %><br>
            <%= f.text_field :book_name ,class:"form-control"%>
            <% @book.errors.full_messages_for(:book_name).each do |message| %>
                <span><%= message %></span><br>
            <% end %>
        </div>

        <div class = "col-lg-6 ">
            <%= f.label :author_name %><br>
            <%= f.text_field :author_name,class:"form-control"%>
            <% @book.errors.full_messages_for(:author_name).each do |message| %>
                <span><%= message %></span>
            <% end %>
        </div>

        <div class = "col-lg-6 ">
            <%= f.label :title %><br>
            <%= f.text_field :title,class:"form-control"%>
            <% @book.errors.full_messages_for(:title).each do |message| %>
                <span><%= message %></span>
            <% end %>
        </div>
        <div class = "col-lg-6 ">
            <%= f.label :price %><br>
            <%= f.text_field :price,class:"form-control"%>
            <% @book.errors.full_messages_for(:price).each do |message| %>
                <span><%= message %></span>
            <% end %>
        </div>
        <div class = "col-lg-6">
            <%= f.label :avatar %><br>
            <%= f.file_field :avatar,class:"form-control"%>
            <% @book.errors.full_messages_for(:avatar).each do |message| %>
                <span><%= message %></span>
            <% end %>
        </div>

        <div class = "col-lg-12" style = "margin: 10px 0px; text-align: center;">
            <%= f.submit "Submit", :class => "btn btn-info" %>
        </div>
    </div>
<% end %>
</div>