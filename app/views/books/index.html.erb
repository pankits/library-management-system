<table class="table">
    <tr>
        <th>Book_Name</th>
        <th>Author_Name</th>
         <th>Title</th>
         <th colspan="3">Action</th>
    </tr>
    <tr>
         <% @books.each do |book|%>
          <td><%= book.book_name%></td>
          <td><%= book.author_name%></td>
          <td><%= book.title%></td>
          <td><%= book.price%></td>
          <td><%= link_to 'Edit',edit_book_path(book.id)%></td>
          <td><%= image_tag(book.avatar ,width:"20%")if book.avatar.attached?%></td> 
         
          <td><%= link_to 'Destroy',book_path(book.id),method: :delete %></td>
          <%end%>
          <%= will_paginate @libraryans%>
    </tr>
</table>

